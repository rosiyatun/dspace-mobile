<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <item name="android:titleTextStyle">@style/AppTheme.TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/AppTheme.SubTitleTextStyle</item>
        <item name="android:background">@color/universal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.TabTitle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.SubTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
